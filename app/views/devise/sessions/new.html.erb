<div id="new-session-screen">
  <div class="container">
    <div class="wrapper">

      <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "form-signin" }) do |f| %>

        <h3 class="form-signin-heading">
          <i class="glyphicon glyphicon-user"></i>
          Acesso do administrador
        </h3>
        <hr class="colorgraph"><br>

        <%= f.email_field :email, class: "form-control", placeholder: "Email", autofocus: true, required: true %>
        
        <%= f.password_field :password, class: "form-control", placeholder: "Senha", autocomplete: "off", required: true %>

        <%= f.submit "Login", class: "btn btn-lg btn-primary btn-block" %>
      <% end %>

    </div>
  </div>
</div>