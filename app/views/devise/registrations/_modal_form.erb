<div class="modal fade" id="member-register-modal" title="Adicionar Membro" role="dialog">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">Adicionar Membro</h4>
      </div>
        
        <%= form_for(@new_member, url: create_member_path, remote: true) do |f| %>

          <div class="modal-body">
            <div class="form-group <%= 'has-error' if @new_member.errors[:name].any? %>">
              <%= f.label :name %><br />
              <%= f.text_field :name, autofocus: true, class: "form-control", required: true %>
              <%= render_attribute_error_if_any(@new_member.errors, :name) %>
            </div>

            <div class="form-group <%= 'has-error' if @new_member.errors[:email].any? %>">
              <%= f.label :email %><br />
              <%= f.email_field :email, autofocus: true, class: "form-control", required: true %>
              <%= render_attribute_error_if_any(@new_member.errors, :email) %>
            </div>
          </div>

          <div class="modal-footer">
            <%= submit_tag "Salvar", class: "btn btn-success" %>
            <button type="button" class="btn btn-default" data-dismiss="modal">Cancelar</button>
          </div>
        <% end %>

    </div>
  </div>
</div>