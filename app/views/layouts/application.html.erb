<!DOCTYPE html>
<html>
<head>
  <title>HappyNel</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <meta name="viewport" content="width=device-width, initial-scale=1">
</head>
<body>

	<% if user_signed_in? %>
  	<nav class="navbar navbar-inverse">
		  <div class="container-fluid">
		    <div class="navbar-header">
		      <a class="navbar-brand" href="/">
		        <i class="glyphicon glyphicon-star"></i>
		        HappyNel
		      </a>
		    </div>
		    <div class="collapse navbar-collapse">

			    <ul class="nav navbar-nav">
		        <li><a href="/polls">Enquetes</a></li>
		        <li><a href="/users">Membros</a></li>
		       </ul>

		      <p class="navbar-text navbar-right">
		      	<i class="glyphicon glyphicon-log-out"></i>
			  		<%= link_to "Sair", destroy_user_session_path, method: :delete, data: {confirm: "Tem certeza de que deseja sair?"}, class: "navbar-link" %>
			  	</p>
			  </div>
		  </div>
		</nav>
  <% end %>

  <%= render_alert(notice) 					if notice %>
	<%= render_alert(alert, "danger") if alert %>

<%= yield %>

</body>
</html>
